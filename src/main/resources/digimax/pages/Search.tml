<html t:type="layout" title="Search"
      t:sidebarTitle="FrameworkVersion"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<h1>${message:search}</h1>

    <form t:type="form" t:id="byTitleForm" clientValidation="none" action="">
        <t:errors/>
    <fieldset>
        <legend>${message:searchByTitle}</legend>
        <t:label for="bookTitle"/>:
        <input t:type="TextField" t:id="bookTitle" value="title" t:validate="required" size="30"/>
       <!-- <input t:type="TextField" t:id="bookTitle" value="title" t:validate="required, minlength=3" size="30"/>-->
        <input t:type="submit" t:id="searchByTitle" value="Search"/>
    </fieldset>
    </form>
    <form t:type="form" t:id="byAuthorForm" clientValidation="none" action="">
        <t:errors/>
    <fieldset>
        <legend>${message:searchByAuthor}</legend>
        <t:label for="authorName"/>:
        <input t:type="TextField" t:id="authorName" value="author" t:validate="required" size="30"/>
        <input t:type="submit" t:id="searchByAuthor" value="Search"/>
    </fieldset>
    </form>
    <div>

    </div>
</html>