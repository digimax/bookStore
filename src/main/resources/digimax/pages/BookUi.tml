<html t:type="layout" title="literal:Book"
      t:sidebarTitle="FrameworkVersion"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<h1>${book.title}</h1>
<h3>${book.subTitle}</h3>
<span t:type="png" fileName="${book.images.get(1).fileName}" altMessage="${book.title}"/>
<h3>${message:authors}</h3>
<ul t:type="loop" source="book.authors" value="author" class="list">
    <li><a t:type="pagelink" page="AuthorUi" context="author.id">${author.fullName}</a></li>
</ul>
<br />
${message:location} <a t:type="pagelink" page="ShelfUi" context="book.shelf.id">${book.shelf.name}</a>
<br />
<fieldset>
    <legend>${message:bookMeta}</legend>
    <span t:type="domain/bookmetaui" bookMeta="book.bookMeta"/>
</fieldset>
<br />
<span t:type="png" fileName="${book.images.get(0).fileName}" altMessage="${book.title}" class="big"/>
<div id="viewerCanvas" style="width: 600px; height: 500px"></div>
</html>

