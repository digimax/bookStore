<html t:type="layout" title="About ncapsuld"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<h1>${author.fullName}</h1>
<h3>${message:books}</h3>
        <span t:type="loop" source="author.books" value="book">
            <a t:type="pagelink" page="BookUi" context="book.id" title="${book.title}"><span t:type="png" fileName="${smallImageFileName}" altMessage="${book.title}"/></a>
        </span>
        <div style="border: 1px red">
            <ul t:type="loop" source="author.books" value="book" class="list">
                <li><a t:type="pagelink" page="BookUi" context="book.id">${book.title}</a></li>
            </ul>
        </div>
</html>
